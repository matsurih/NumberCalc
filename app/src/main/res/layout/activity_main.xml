<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="matsurihime.github.io.numbercalc.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="0dp">

            <EditText
                android:id="@+id/txtBin"
                android:layout_width="364dp"
                android:layout_height="62dp"
                android:ems="10"
                android:inputType="number"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/labelBin"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:id="@+id/txtHex"
                android:layout_width="357dp"
                android:layout_height="59dp"
                android:ems="10"
                android:inputType="text"
                android:layout_marginTop="9dp"
                app:layout_constraintTop_toBottomOf="@+id/labelHex"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="8dp" />

            <EditText
                android:id="@+id/txtDec"
                android:layout_width="366dp"
                android:layout_height="63dp"
                android:ems="10"
                android:inputType="number"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/labelDec"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/labelBin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bin（2進数）"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.028" />

            <TextView
                android:id="@+id/labelDec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec（10進数）"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnBin"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.029" />

            <TextView
                android:id="@+id/labelHex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hex（16進数）"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnDec"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.029" />

            <Button
                android:id="@+id/btnHex"
                android:layout_width="353dp"
                android:layout_height="47dp"
                android:text="Convert"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtHex"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp" />

            <Button
                android:id="@+id/btnDec"
                android:layout_width="353dp"
                android:layout_height="47dp"
                android:text="Convert"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/txtDec"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/btnBin"
                android:layout_width="353dp"
                android:layout_height="47dp"
                android:text="Convert"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtBin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.521"
                android:layout_marginRight="8dp" />

        </android.support.constraint.ConstraintLayout>


    </ScrollView>



</LinearLayout>
